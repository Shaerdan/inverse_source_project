{
  "forward": {
    "method": "analytical",
    "n_boundary_points": 100,
    "domain_type": "disk",
    "domain_params": {
      "radius": 1.0,
      "a": 2.0,
      "b": 1.0
    }
  },
  
  "inverse": {
    "method": "linear",
    "regularization": "l1",
    "alpha": 1e-4,
    "n_sources": 4,
    "optimizer": "L-BFGS-B",
    "max_iter": 200,
    "tolerance": 1e-6
  },
  
  "grid": {
    "n_radial": 10,
    "n_angular": 20,
    "r_min": 0.1,
    "r_max": 0.9
  },
  
  "tv": {
    "algorithm": "chambolle_pock",
    "tau": 0.1,
    "sigma": 0.1,
    "theta": 1.0,
    "rho": 1.0,
    "max_iter": 500,
    "tol": 1e-5
  },
  
  "visualization": {
    "live_plot": false,
    "plot_interval": 10,
    "save_figures": true,
    "figure_dir": "results",
    "dpi": 150
  }
}
